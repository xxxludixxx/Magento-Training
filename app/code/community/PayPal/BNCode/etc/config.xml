<?xml version="1.0"?>
<config>
    <modules>
        <PayPal_BNCode>
            <version>1.0.0</version>
        </PayPal_BNCode>
    </modules>
    <global>
        <helpers>
            <PayPal_BNCode>
                <class>PayPal_BNCode_Helper</class>
            </PayPal_BNCode>
        </helpers>
        <models>
            <PayPal_BNCode>
                <class>PayPal_BNCode_Model</class>
            </PayPal_BNCode>
            <paypal>
                <rewrite>
                    <config>PayPal_BNCode_Model_Config</config>
                </rewrite>
            </paypal>
        </models>
        <events>
            <controller_front_init_before>
                <observers>
                    <paypal_bncode>
                        <type>model</type>
                        <class>PayPal_BNCode/config</class>
                        <method>setCorrectModuleClass</method>
                    </paypal_bncode>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
</config>
